@model Subject

<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Изменение предмета</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="SubjectName"></label>
			<input asp-for="SubjectName" disabled class="form-control" />
			<span asp-validation-for="SubjectName" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px">Удалить</button>
		<a asp-controller="Subject" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Отменить
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}


