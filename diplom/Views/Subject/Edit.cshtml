@model Subject

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Изменение предмета</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="SubjectName"></label>
			<input asp-for="SubjectName" class="form-control" />
			<span asp-validation-for="SubjectName" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Изменить</button>
		<a asp-controller="Subject" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Отменить
		</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}

