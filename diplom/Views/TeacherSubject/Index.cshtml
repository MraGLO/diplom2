@model IEnumerable<TeacherSubject>


<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Преподаватели и предметы</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="TeacherSubject" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp; Добавить
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
	<thead>
		<tr>
			<th>
				Id преподавателя
			</th>
			<th>
				id предмета
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr>
				<td width="50%">
					@obj.TeacherId
				</td>
				<td width="50%">
					@obj.SubjectId
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-controller="TeacherSubject" asp-action="Edit" asp-route-id ="@obj.Id" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"></i> Изменить
					</a>
					<a asp-controller="TeacherSubject" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
						<i class="bi bi-trash3"></i> Удалить
					</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
